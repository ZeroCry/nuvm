#cloud-config

# Hostname management
preserve_hostname: False
hostname: HOSTNAME
fqdn: HOSTNAME.DOMAIN

# Instal packages
package_update: true
packages:
  - unzip
  - curl
  - openvpn

# Configure where output will go
output:
  all: ">> /var/log/cloud-init.log"

# configure interaction with ssh server
ssh_svcname: ssh
ssh_deletekeys: True
ssh_genkeytypes: ['rsa', 'ecdsa', 'ed25519']

users:
  - default
  - name: nuvm
    gecos: nuvm
    primary-group: nuvm
    groups: users
    ssh-import-id: nuvm
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    ssh_authorized_keys:
        - $ssh_key

growpart:
  mode: auto
  devices: ['/']
  ignore_growroot_disabled: false

write_files:
-   path: /opt/pia.sh
    encoding: b64
    owner: root:root
    permission: '0777'
    content: |
        $install_pia_b64
runcmd:
  - [ ifdown, eth0 ]
  - [ ifup, eth0 ]
  - [ bash, /opt/pia.sh ]
